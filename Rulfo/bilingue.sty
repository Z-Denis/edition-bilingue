\newcommand{\importbilingualpages}[5]{%
	\fancyhead[CE]{#2}
	\fancyhead[CO]{#4}

	\begin{pages}
		\selectlanguage{\leftlang}
		\begin{Leftside}
			\beginnumbering
			\import{#1}{#3}
			\endnumbering
		\end{Leftside}

		\selectlanguage{\rightlang}
		\begin{Rightside}
			\beginnumbering
			\import{#1}{#5}
			\endnumbering
		\end{Rightside}

	\end{pages}
	\Pages
}

